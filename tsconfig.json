{
  "outDir": "./lib/",
  "allowSyntheticDefaultImports": true,
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "lib": [ "es2015", "DOM", "es6" ],
    "baseUrl": ".",
    "paths": {
      "index.d.ts": ["index.d.ts"],
      "$components/*": ["src/components/*"],
      "$containers/*": ["src/containers/*"],
      "$constants/*": ["src/constants/*"],
      "$sprites/*": ["src/sprites/*"],
      "$config/*": ["./config/*"],
      "$styles/*": ["src/styles/*"],
      "$redux/*": ["src/redux/*"],
      "$utils/*": ["src/utils/*"]
    },
    "typeRoots": [
      "index.d.ts",
      "node_modules/@types"
    ]
  },
  "include": [
    "./src/index.ts",
    "./custom.d.ts"
  ],
  "exclude": [
    "node_modules",
    "./__tests__/**/*"
  ]
}
